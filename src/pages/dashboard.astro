            <th class="text-center py-3 px-4 text-gray-400 font-medium">Priority</th>
          </tr>
        </thead>
        <tbody>
          {projects.map(p => (
            <tr class="border-b border-navy-700/50 hover:bg-navy-800/30 transition-colors">
              <td class="py-3 px-4">
                <span class="text-lg mr-2">{p.emoji}</span>
                <span class="text-white font-medium">{p.name}</span>
              </td>
              <td class="py-3 px-4">
                <span class:list={[
                  p.status === 'live' && 'badge-live',
                  p.status === 'polishing' && 'badge-polishing',
                  p.status === 'research' && 'badge-research',
                ]}>
                  {p.statusLabel}
                </span>
              </td>
              <td class="py-3 px-4 text-gray-400 hidden sm:table-cell">{p.revenue}</td>
              <td class="py-3 px-4 text-center">
                <span class="text-amber-400 font-mono font-bold">{p.priority}</span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Project Cards -->
    <div class="prose-factory">
      <h2>Project Details</h2>
    </div>

    <div class="space-y-5 my-8">
