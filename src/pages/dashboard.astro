          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <span class="text-3xl">{p.emoji}</span>
              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-white font-bold text-lg">{p.name}</h3>
                  <span class:list={[
                    p.status === 'live' && 'badge-live',
                    p.status === 'polishing' && 'badge-polishing',
                    p.status === 'research' && 'badge-research',
                  ]}>{p.statusLabel}</span>
                </div>
                <p class="text-gray-500 text-sm">{p.subtitle}</p>
              </div>
            </div>
            <span class="text-amber-400 font-mono font-bold text-lg">{p.priority}</span>
          </div>

          <p class="text-gray-300 text-sm mb-4">{p.summary}</p>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 text-xs">
            <div class="p-2 bg-navy-900/50 rounded-lg">
              <span class="text-gray-500 block mb-0.5">Tech Stack</span>
