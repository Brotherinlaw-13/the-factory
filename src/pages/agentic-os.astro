  <!-- Hero -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 pt-16 md:pt-24 pb-12">
    <div class="flex items-center gap-3 mb-6">
      <span class="text-5xl">üß†</span>
      <div>
        <div class="flex items-center gap-3">
          <h1 class="text-4xl md:text-5xl font-black text-white">Synaptic</h1>
          <span class="px-3 py-1 bg-purple-500/15 text-purple-400 rounded-full text-xs font-bold uppercase tracking-wider">Vision</span>
