---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "One founder. One AI agent. Seven products. The story of AI-augmented solo entrepreneurship." } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/rook', label: 'Meet Rook' },
  { href: '/playbook', label: 'Playbook' },
  { href: '/overnight', label: 'Overnight' },
  { href: '/darwin', label: 'Darwin' },
  { href: '/chowdown', label: 'Chowdown' },
  { href: '/moonshots', label: 'Moonshots' },
  { href: '/dashboard', label: 'Dashboard' },
];

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ğŸ°</text></svg>" />
  <title>{title} â€” The Factory</title>
</head>
<body class="min-h-screen flex flex-col">
  <!-- Navigation -->
  <nav class="sticky top-0 z-50 bg-navy-900/80 backdrop-blur-xl border-b border-navy-700/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 text-white font-bold text-lg hover:text-amber-400 transition-colors">
          <span class="text-2xl">ğŸ°</span>
          <span class="hidden sm:inline">The Factory</span>
        </a>

        <!-- Desktop Nav -->
        <div class="hidden lg:flex items-center gap-1">
          {navLinks.map(link => (
            <a
              href={link.href}
              class:list={[
                "px-3 py-2 rounded-lg text-sm font-medium transition-colors",
                currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                  ? "bg-amber-500/15 text-amber-400"
                  : "text-gray-400 hover:text-white hover:bg-navy-700/50"
              ]}
            >
              {link.label}
            </a>
          ))}
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-400 hover:text-white" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile Nav -->
      <div id="mobile-menu" class="lg:hidden hidden pb-4">
        <div class="flex flex-col gap-1">
          {navLinks.map(link => (
            <a
              href={link.href}
              class:list={[
                "px-3 py-2 rounded-lg text-sm font-medium transition-colors",
                currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                  ? "bg-amber-500/15 text-amber-400"
                  : "text-gray-400 hover:text-white hover:bg-navy-700/50"
              ]}
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="border-t border-navy-700/50 bg-navy-900/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Brand -->
        <div>
          <div class="flex items-center gap-2 mb-3">
            <span class="text-2xl">ğŸ°</span>
            <span class="text-white font-bold text-lg">The Factory</span>
          </div>
          <p class="text-gray-400 text-sm leading-relaxed">
            One founder. One AI agent. Seven products.<br/>
            Built with OpenClaw by Rook & Diego.
          </p>
        </div>

        <!-- Products -->
        <div>
          <h4 class="text-white font-semibold mb-3">Products</h4>
          <div class="flex flex-col gap-2">
            <a href="https://darwin.page" target="_blank" rel="noopener" class="text-gray-400 hover:text-amber-400 text-sm transition-colors">ğŸ§¬ Darwin â€” darwin.page</a>
            <a href="https://chowdown.me" target="_blank" rel="noopener" class="text-gray-400 hover:text-amber-400 text-sm transition-colors">ğŸ½ï¸ Chowdown â€” chowdown.me</a>
            <a href="/dashboard" class="text-gray-400 hover:text-amber-400 text-sm transition-colors">ğŸ“Š All Projects Dashboard</a>
          </div>
        </div>

        <!-- Links -->
        <div>
          <h4 class="text-white font-semibold mb-3">Connect</h4>
          <div class="flex flex-col gap-2">
            <a href="https://github.com/openclaw/openclaw" target="_blank" rel="noopener" class="text-gray-400 hover:text-amber-400 text-sm transition-colors">GitHub â€” OpenClaw</a>
            <a href="https://twitter.com/chowdown_me" target="_blank" rel="noopener" class="text-gray-400 hover:text-amber-400 text-sm transition-colors">ğ• â€” @chowdown_me</a>
          </div>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-navy-700/30 text-center">
        <p class="text-gray-500 text-sm">Built with ğŸ° by Rook and Diego Â· Powered by <a href="https://github.com/openclaw/openclaw" class="text-amber-500/70 hover:text-amber-400 transition-colors">OpenClaw</a></p>
      </div>
    </div>
  </footer>

  <script is:inline>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
